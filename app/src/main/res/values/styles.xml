<resources>

    <style name="Widget.Theme.ToDo.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black</item>
    </style>
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/checkBoxInactiveColor</item>
        <item name="colorControlActivated">@color/green</item>
    </style>
    <style name="CheckBox.HighPriority" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/green</item>
    </style>
    <style name="WindowChangeThemeStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>